{
  "version": 3,
  "configurePresets": [
    {
      "name": "default-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "toolchainFile": "${sourceDir}/build/${presetName}/conan/conan_toolchain.cmake"
    },
    {
      "name": "macos-armv8-cross",
      "inherits": "default-base",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Darwin",
        "CMAKE_SYSTEM_PROCESSOR": "armv8"
      },
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-clang",
      "inherits": "default-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-14",
        "CMAKE_CXX_COMPILER": "clang++-14"
      },
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-gcc",
      "inherits": "default-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-11",
        "CMAKE_CXX_COMPILER": "g++-11"
      },
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "default-msvc",
      "inherits": "default-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      }
    },
    {
      "name": "msvc-cl-base",
      "hidden": true,
      "inherits": "default-msvc",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "msvc-clang-base",
      "hidden": true,
      "inherits": "default-msvc",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL"
    },
    {
      "name": "release-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "description": "Release build using Clang and LLVM libc++",
      "inherits": [
        "linux-clang",
        "release-base"
      ]
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "description": "Debug build using Clang and LLVM libc++",
      "inherits": [
        "linux-clang",
        "debug-base"
      ]
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "description": "Release build using GCC and libstdc++",
      "inherits": [
        "linux-gcc",
        "release-base"
      ]
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "description": "Debug build using GCC and libstdc++",
      "inherits": [
        "linux-gcc",
        "debug-base"
      ]
    },
    {
      "name": "windows-msvc-release",
      "displayName": "MSVC Release",
      "description": "Release build using MSVC native compilers",
      "inherits": [
        "msvc-cl-base",
        "release-base"
      ]
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "MSVC Debug",
      "description": "Debug build using MSVC native compilers",
      "inherits": [
        "msvc-cl-base",
        "debug-base"
      ]
    },
    {
      "name": "windows-msvc-clang-release",
      "displayName": "MSVC Clang Release",
      "description": "Release build using the MSVC Clang toolset",
      "inherits": [
        "msvc-clang-base",
        "release-base"
      ]
    },
    {
      "name": "windows-msvc-clang-debug",
      "displayName": "MSVC Clang Debug",
      "description": "Debug build using the MSVC Clang toolset",
      "inherits": [
        "msvc-clang-base",
        "debug-base"
      ]
    },
    {
      "name": "macos-armv8-clang-release",
      "displayName": "MacOS Arm64 Clang Release",
      "description": "Release build using Apple Clang for Apple Silicon",
      "inherits": [
        "macos-armv8-cross",
        "release-base"
      ]
    },
    {
      "name": "macos-armv8-clang-debug",
      "displayName": "MacOS Arm64 Clang Debug",
      "description": "Debug build using Apple Clang for Apple Silicon",
      "inherits": [
        "macos-armv8-cross",
        "debug-base"
      ]
    },
    {
      "name": "diagnostics",
      "displayName": "Clang Diagnostics",
      "description": "Build for diagnostics",
      "inherits": [
        "linux-clang",
        "release-base"
      ],
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ]
}
